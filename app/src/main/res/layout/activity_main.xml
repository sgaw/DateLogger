<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.playground.sgaw.sample.datelogger.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.playground.sgaw.sample.datelogger.CircularSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.playground.sgaw.sample.datelogger.CircularButton
            android:id="@+id/circularButton"
            android:layout_width="@dimen/center_button_width"
            android:layout_height="@dimen/center_button_width"
            android:layout_gravity="center"/>
    </FrameLayout>

    <Button
        android:id="@+id/detailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_button_launch"/>

</LinearLayout>
